@model ZedShop.Core.DTOs.Product.ShowProductViewModel

<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="display: flex; justify-content: space-between; align-items: center;">
                <h5 class="modal-title" id="commentModalLabel">افزودن دیدگاه جدید</h5>
                <button style="margin-right:55%" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="AddComment" asp-controller="Product">
                    <input type="hidden" asp-for="@Model.commentViewModel.UserId" value="@Model.commentViewModel.UserId" />
                    <input type="hidden" asp-for="@Model.commentViewModel.PoroductId" value="@Model.commentViewModel.PoroductId" />

                    <div class="form-group">
                        <label asp-for="@Model.commentViewModel.Content">دیدگاه</label>
                        <textarea class="form-control" asp-for="@Model.commentViewModel.Content" rows="5"></textarea>
                    </div>
                    <div style="width:100%; text-align:center;">
                        <button type="submit" class="btn btn-info">ارسال دیدگاه</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>