@using ZedShop.Core.DTOs.Product
@model List<ZedShop.Core.DTOs.Product.ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="site-blocks-cover overlay" style="background-image: url(images/hero_2.jpg);" data-aos="fade"
     data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center">

            <div class="col-md-12" data-aos="fade-up" data-aos-delay="400">

                <div class="row mb-4">
                    <div class="col-md-7">
                        <h1>خرید با اطمینان از ما</h1>
                        <p class="mb-5 lead" style="text-align: justify;">
                            ما بهترین محصولات را از تامین کنندگان معتبر تهیه می‌کنیم و اطمینان حاصل می‌کنیم که مشتریان ما اقلامی با ارزش و دوام استثنایی دریافت می‌کنند.
                        </p>
                        <div>
                            <a id="onlineshopping"
                               class="btn btn-white btn-outline-white py-3 px-5 rounded-0 mb-lg-0 mb-2 d-block d-sm-inline-block">
                                خرید
                                انلاین
                            </a>
                            <a href="#" class="btn btn-white py-3 px-5 rounded-0 d-block d-sm-inline-block">
                                باشگاه
                                مشتریان
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="site-section" id="products-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-6 text-center">
                <h2 class="section-title mb-3">محصولات ما</h2>
                <p>
                    در زدشاپ، متعهد به ارائه یک تجربه خرید بی‌نظیر به مشتریان ارزشمند خود هستیم که فراتر از انتظارات است. ما به ارائه طیف گسترده‌ای از محصولات باکیفیت که با دقت برای برآورده کردن نیازها و ترجیحات متنوع شما انتخاب شده‌اند، افتخار می‌کنیم.
                </p>
            </div>
        </div>
        <div class="row">

            @{
                List<ProductViewModel> products = Model;

                foreach (var item in products)
                {
                        <partial name="_BoxProducts" model="@item" />
                }
            }

        </div>
    </div>
</div>

<div class="site-blocks-cover inner-page-cover overlay get-notification"
     style="background-image: url(images/banner.jpg); background-attachment: fixed;" data-aos="fade">
    <div class="container">

        <div class="row align-items-center justify-content-center">
            <form class="col-md-7" method="post">
                <h2>کالای خود را جستجو کنید</h2>
                <div class="d-flex mb-4">
                    <input type="text" id="searchInput" class="form-control rounded-0" placeholder="نام یا دسته‌بندی کالای خود را وارد کنید">
                    <input type="submit" class="btn btn-white btn-outline-white rounded-0" value="جستجو">
                </div>
                <div class="searchResults" id="searchResults"></div>
                <p>
                    با جستجوی پیشرفته تجریه، خرید متفاوتی را تجربه کنید...
                </p>
            </form>
        </div>

    </div>
</div>



<div class="site-section testimonial-wrap" id="testimonials-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="section-title mb-3">بخشی از نظرات کاربران در مورد ما</h2>
            </div>
        </div>
    </div>
    <div class="slide-one-item home-slider owl-carousel" dir="ltr">

        @foreach (var item in ViewBag.Opinions)
        {
            <div>
                <div class="testimonial">
                    <figure class="mb-4 d-block align-items-center justify-content-center">
                        <div><img src="/UserAvatar/@item.UserAvatar" alt="Image" class="w-100 img-fluid mb-3"></div>
                    </figure>
                    <blockquote class="mb-3">
                        <p>
                            @item.Content
                        </p>
                    </blockquote>
                    <br />
                    <p class="text-black"><strong>@item.UserName</strong></p>
                    <p class="text-black">@item.Date</p>


                </div>
            </div>
        }


    </div>
</div>


<div class="site-section bg-light" id="services-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="section-title mb-3">بخشی از خدمات ما برای شما</h2>
            </div>
        </div>
        <div class="row align-items-stretch">
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon mr-4"><span class="text-primary icon-pie_chart"></span></div>
                    <div>
                        <h3>تنوع محصولات</h3>
                        <p style="text-align:justify">

                            در این فروشگاه در تلاشیم با ارائه طیف وسیعی از محصولات به نیازمندی شما پاسخ دهیم.

                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon mr-4"><span class="text-primary icon-backspace"></span></div>
                    <div>
                        <h3>حذف کالای بی‌کیفیت</h3>
                        <p style="text-align:justify">
                            با مشاهده کالا بی کیفیت تیم پشتیبانی ما به سرعت آن کالا را از زنجیره فروش خارج می‌کنند.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon mr-4"><span class="text-primary icon-av_timer"></span></div>
                    <div>
                        <h3>تحویل سریع</h3>
                        <p style="text-align:justify">
                            در این فروشگاه تمام تلاش خود را می‌کنیم که در کمترین زمان کالا را به دست شما برسانیم.
                        </p>
                    </div>
                </div>
            </div>


            <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up" data-aos-delay="300">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon mr-4"><span class="text-primary icon-beenhere"></span></div>
                    <div>
                        <h3>پرداخت امن</h3>
                        <p style="text-align:justify">
                            جهت اطمینان خاطر مشتریان تمامی پرداخت‌ها از طریق درگاه‌های معتبر بانکی انجام می‌شود.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up" data-aos-delay="400">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon mr-4"><span class="text-primary icon-business_center"></span></div>
                    <div>
                        <h3>تحویل مطمعن</h3>
                        <p style="text-align:justify">
                            با بسته‌بندی با کیفیت در تلاشیم تا کمترین آسیب به کالاها در حمل‌ونقل وارد شود.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up" data-aos-delay="500">
                <div class="unit-4 d-flex">
                    <div class="unit-4-icon mr-4"><span class="text-primary icon-cloud_done"></span></div>
                    <div>
                        <h3>پشتیبانی سریع</h3>
                        <p style="text-align:justify">
                            در صورت بروز مشکل در فرایند خرید به راحتی می‌توانید با همکاران ما ارتباط برقرار کنید.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    const h1 = document.getElementById("onlineshopping");
    const targetPosition = document.getElementById("products-section").offsetTop; // Get Y position of target element

    h1.addEventListener("click", function () {
        window.scrollTo({
            top: targetPosition,
            behavior: "smooth" // Enables smooth scrolling animation
        });
    });
</script>

<script>

    const searchInput = document.getElementById('searchInput');
    const searchResults = document.getElementById('searchResults');

    searchInput.addEventListener('keyup', () => {
        const searchTerm = searchInput.value;

        $.ajax({
            url: '/Home/ProductsUserSearch/', // controller and action
            data: { userInput: searchTerm }, // Send the userInput as a parameter
            dataType: 'html',
            success: function (data) {

                $('#searchResults').html(data); // Insert the received HTML into the container
                searchResults.style.display = 'block';
            }
        });
        
    });
</script>

<script>
    function usiOnClick(productId) {
        window.location.href = "/ShowProduct/" + productId;
        const searchInput = document.getElementById('searchInput');
        searchInput.value = "";
    }

</script>
